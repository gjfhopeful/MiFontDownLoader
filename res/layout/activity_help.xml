<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <android.support.v4.view.ViewPager
        android:id="@+id/help_image_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/help_point_tips"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/help_point_tips"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/help_activity_bottom_view_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/help_show_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/help_activity_bottom_view_height"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/help_nevershow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/help_nervershow"
            android:layout_weight=".3"
            android:visibility="visible" />

        <Button
            android:id="@+id/help_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:layout_alignParentBottom="true"
            android:text="@string/help_sure"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>